{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "@polyfills": [
        "node_modules/lumen-cms-core/client/polyfills.js"
      ],
      "@LmComponentRender": [
        "node_modules/lumen-cms-core/src/components/CoreComponents.tsx"
      ],
      "@CONFIG": [
        "node_modules/lumen-cms-core/src/utils/config.ts"
      ],
      "@context/*": [
        "node_modules/lumen-cms-core/src/components/provider/context/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/lumen-cms-core/**/*.tsx",
    "node_modules/lumen-cms-core/**/*.ts",
    "node_modules/lumen-cms-core/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
